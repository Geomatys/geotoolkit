    <build>
        <plugins>
            <!-- regroup all jar files -->
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-dependency-plugin</artifactId>
                <configuration>
                    <outputDirectory>target/tozip/jar</outputDirectory>
                    <stripVersion>false</stripVersion>
                </configuration>
                <executions>
                    <execution>
                        <id>copy-dependencies</id>
                        <phase>package</phase>
                        <goals>
                            <goal>copy-dependencies</goal>
                        </goals>
                    </execution>
                </executions>
            </plugin>

            <!-- copy shell script and zip folder -->
            <plugin>
                <artifactId>maven-antrun-plugin</artifactId>
                <executions>
                    <execution>
                        <phase>package</phase>
                        <configuration>
                            <tasks>
                                <property name="shellFolder" value="./src/main/shell/" />
                                <property name="targetFolder" value="./target/" />
                                <property name="toZipFolder" value="./target/tozip/" />

                                <!-- copy shell scripts -->
                                <copy todir="${toZipFolder}">
                                    <fileset dir="${shellFolder}"/>
                                </copy>

                                <!-- zip everything -->
                                <zip destfile="${targetFolder}/geotk-shell.zip" basedir="${toZipFolder}"/>
                            </tasks>
                        </configuration>
                        <goals>
                            <goal>run</goal>
                        </goals>
                    </execution>
                </executions>
            </plugin>
        </plugins>
    </build>


