<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <parent>
    <artifactId>display</artifactId>
    <groupId>org.geotoolkit</groupId>
    <version>4.x-SNAPSHOT</version>
  </parent>
  <modelVersion>4.0.0</modelVersion>
  <groupId>org.geotoolkit</groupId>
  <artifactId>geotk-widgets-javafx-scenebuilder</artifactId>
  <name>JavaFX Bundle for SceneBuilder</name>
  <build>
    <plugins>
      <plugin>
        <artifactId>maven-compiler-plugin</artifactId>
        <version>3.1</version>
        <configuration>
          <source>1.8</source>
          <target>1.8</target>
        </configuration>
      </plugin>
      <plugin>
        <artifactId>maven-shade-plugin</artifactId>
        <version>2.3</version>
        <executions>
          <execution>
            <phase>package</phase>
            <goals>
              <goal>shade</goal>
            </goals>
            <configuration>
              <filters>
                <filter>
                  <artifact>*:*</artifact>
                  <includes>
                    <include>org/apache/sis/util/**</include>
                    <include>org/geotoolkit/sld/**</include>
                    <include>org/geotoolkit/style/**</include>
                    <include>org/geotoolkit/gui/**</include>
                    <include>org/geotoolkit/font/**</include>
                    <include>org/geotoolkit/map/**</include>
                    <include>org/geotoolkit/cql/**</include>
                    <include>org/geotoolkit/internal/**</include>
                    <include>org/opengis/**</include>
                    <include>jfxtras/**</include>
                    <include>jidefx/**</include>
                    <include>com/fxexperience/**</include>
                  </includes>
                </filter>
              </filters>
            </configuration>
          </execution>
        </executions>
      </plugin>
    </plugins>
  </build>
  <dependencies>
    <dependency>
      <groupId>org.geotoolkit.project</groupId>
      <artifactId>geotk-test</artifactId>
      <version>4.x-SNAPSHOT</version>
      <scope>test</scope>
      <exclusions>
        <exclusion>
          <artifactId>geoapi-conformance</artifactId>
          <groupId>org.opengis</groupId>
        </exclusion>
      </exclusions>
    </dependency>
    <dependency>
      <groupId>junit</groupId>
      <artifactId>junit</artifactId>
      <version>4.11</version>
      <scope>test</scope>
      <exclusions>
        <exclusion>
          <artifactId>hamcrest-core</artifactId>
          <groupId>org.hamcrest</groupId>
        </exclusion>
      </exclusions>
    </dependency>
  </dependencies>
</project>

