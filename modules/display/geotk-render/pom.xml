      <groupId>org.geotoolkit.pending</groupId>
      <artifactId>geotk-engine-core</artifactId>
      <version>${geotoolkit.version}</version>
    </dependency>
    <dependency>
      <groupId>org.geotoolkit.pending</groupId>
      <artifactId>geotk-style</artifactId>
      <version>${geotoolkit.version}</version>
    </dependency>

    <dependency>
